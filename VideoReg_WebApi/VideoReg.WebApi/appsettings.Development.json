{
  "Settings": {
    "Redis": "192.168.88.12",
    "TrendsFileName": "./Test/values.json",
    "ImagePollingAttempts": 10,
    "ImagePollingDelayMs": 20,
    "VideoArchivePath": "./Test/video_arh",
    "UpdateVideoArchiveMs": 60000,
    "BrigadeHistoryFileName": "./Test/brigade.history",
    "CameraUpdateIntervalMs": 333,
    "CameraGetImageTimeoutMs": 3000,
    "UpdateChannelArchiveMs": 60000,
    "CameraUpdateSleepIfErrorTimeoutMs": 30000
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "IsJson": true,
        "Args": {
          "pathFormat": "./logs/log-{Date}.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "restrictedToMinimumLevel": "Debug", //"Warning",
          "outputTemplate": "{Timestamp:o} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}) {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": { "maximumDestructuringDepth": 4 }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": { "maximumStringLength": 200 }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": { "maximumCollectionCount": 10 }
      }
    ],
    "Properties": {
      "Application": "VideoReg.WebApi"
    }
  }
}
